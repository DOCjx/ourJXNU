/* pages/my/my_pages/collect/collect.wxss */

page{
    display: block;
    min-height: 100%;
    background-color: white;
}


/*导航*/

.navbar{
    height: 45px;
    line-height: 45px;
    width: 100%;
    background-color: #FBFBFB;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    font-family: "微软雅黑";
    font-size: 16px;
}

.navbar .item{ 
    position: relative; 
    flex: auto; 
    text-align: center;
    color: 	#5B5B5B; 
}
.navbar .item.active{ 
    color: #000000;
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #FFCC00; 
}


/*内容*/

.fenjing,.zis{
    display: flex;
    flex-direction: row;
    align-items: center;
    max-height: 90px;
}
.fenjing image,.zis image{
    margin-left: 20rpx;
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}
.fenjing .fen,.zis .zi{
    width: 570rpx;
    margin-left: 30rpx;
    font-family: "微软雅黑";
    font-size: 16px;
}

navigator{
    padding-top: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #F0F0F0;
}
