/**index.wxss**/
@import "../common/wrapperContent/wrapperContent.wxss";
@import "../common/wrapperContent1/wrapperContent1.wxss";
@import "../common/wrapperContent2/wrapperContent2.wxss";
.wrapper-scroll {
    position:fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    overflow:auto
}

.banner-box{
    position: relative;
    height: 400rpx
}
.banner-bg{
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 400rpx;
    background: #00b4cd    
}
.slide-image{
     width: 100%;
     height: 100%
}
.search-box{
    position: absolute;
    right: 15rpx;
    z-index: 2;
    width: 180rpx;
    height: 80rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    top: 300rpx;
    border: 1rpx solid white;
    box-shadow: 0 0 3rpx white;
    border-radius: 12rpx;
    opacity: 1;
      
}
.search-icon{
    width: 30rpx;
    height: 30rpx;
}
.search-input{
    width: 100rpx;
    height: 80rpx;
    color: white;
    font-size: 30rpx;
    border: none;
    line-height: 80rpx
}
.flex-wrp{
  width: 100%;
  display:flex;
}
.flex-item{
  width: 50%;
  height: 100rpx;
  font-size: 26rpx;
}
