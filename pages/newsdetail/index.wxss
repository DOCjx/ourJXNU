/* pages/index/index.wxss */
.news_list{
    width: 100%;
    height: 50px;
}
.news_detail{
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    padding:10px 0 10px 10px;
}

.avatar_img{
    width: 15%;
    height: 95%;
}
.avatar_img image{
    width:100%;
    height: 100%;
    border-radius: 50%;
}

.news-info{
    display: block;
}

.news_text{
    padding-left:10px;
    color:#777;
}
.user_warn{
    font-size:13px;
}

.username{
    font-size:16px;
}

.news_info{
    font-size:12px;
}

.bottom_line{
    position: absolute;
    bottom:0;
    width: 97%;
    height: 1px;
    background-color:#ddd;
}